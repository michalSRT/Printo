@model IEnumerable<Printo.Data.Data.Client>

@{
    ViewData["Title"] = "Klienci";
}

<div class="row">
    <div class="col">
        <h3 class="mb-2 page-title">Klienci</h3>
    </div>
    <div class="col">
        <a class="btn btn-outline-success float-right mb-3" role="button" aria-haspopup="true" aria-expanded="false" asp-action="Create">
            <i class="fe fe-user-plus fe-16" style="padding-right:5px; vertical-align:text-bottom"></i>
            Dodaj
        </a>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-body">

                <table class="table dataTable table-responsive-xl" id="dataTable-1">
                    <thead>
                        <tr>
                            <th>
                                Nazwa firmy
                            </th>                            
                            <th>
                                Nazwisko i imię
                            </th>
                            <th>
                                Adres e-mail
                            </th>
                            <th>
                                Telefon kontaktowy
                            </th>
                            <th>
                                Adres
                            </th>
                            <th>Akcja</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CompanyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName) @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Street) @Html.DisplayFor(modelItem => item.HouseNumber)
                                @if (item.AppartmentNumber != null)
                                {<text> / </text> @Html.DisplayFor(modelItem => item.AppartmentNumber)} , @Html.DisplayFor(modelItem => item.PostalCode) @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.ClientID" role="button" data-toggle="tooltip" title="Edytuj">
                                    <i class="fe fe-edit fe-16"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>


