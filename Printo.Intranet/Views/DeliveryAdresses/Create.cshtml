@model Printo.Data.Data.DeliveryAdress

@{
    ViewData["Title"] = "Nowy adres dostawy";
}

<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header">
                <strong class="card-title">Nowy adres dostawy</strong>
            </div>

            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="card-columns">

                        <div class="card shadow mb-4" style="padding-top:10px">

                            <div class="form-row" style="margin-left:10px; margin-right:10px">
                                <div class="form-group col">
                                    <label asp-for="CompanyName" class="control-label">Nazwa firmy</label>
                                    <input asp-for="CompanyName" type="text" class="form-control" />
                                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row" style="margin-left:10px; margin-right:10px">
                                <div class="form-group col">
                                    <label asp-for="ContactName" class="control-label">Osoba kontaktowa</label>
                                    <input asp-for="ContactName" type="text" class="form-control" />
                                    <span asp-validation-for="ContactName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row" style="margin-left:10px; margin-right:10px">
                                <div class="form-group col">
                                    <label asp-for="Phone" class="control-label">Telefon kontaktowy</label>
                                    <input asp-for="Phone" type="text" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="card shadow mb-4" style="padding-top:10px">

                            <div class="form-row" style="margin-left:10px; margin-right:10px">
                                <div class="form-group col">
                                    <label asp-for="Street" class="control-label">Ulica</label>
                                    <input asp-for="Street" type="text" class="form-control" />
                                    <span asp-validation-for="Street" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row" style="margin-left:10px; margin-right:10px">
                                <div class="form-group col" style="min-width: fit-content;">
                                    <label asp-for="HouseNumber" class="control-label">Nr domu</label>
                                    <input asp-for="HouseNumber" type="text" class="form-control" />
                                    <span asp-validation-for="HouseNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group col" style="min-width: fit-content;">
                                    <label asp-for="AppartmentNumber" class="control-label">Nr mieszkania</label>
                                    <input asp-for="AppartmentNumber" type="text" class="form-control" />
                                    <span asp-validation-for="AppartmentNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row" style="margin-left:10px; margin-right:10px">
                                <div class="form-group col" style="min-width: fit-content;">
                                    <label asp-for="PostalCode" class="control-label">Kod pocztowy</label>
                                    <input asp-for="PostalCode" type="text" class="form-control" />
                                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                                </div>
                                <div class="form-group col" style="min-width: fit-content;">
                                    <label asp-for="City" class="control-label">Miasto</label>
                                    <input asp-for="City" type="text" class="form-control" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="card shadow mb-4" style="padding-top:10px">

                            <div class="form-row" style="margin-left:10px; margin-right:10px">
                                <div class="form-group col">
                                    <label asp-for="ClientID" class="control-label">Adres dostawy dle klienta:</label>
                                    <select asp-for="ClientID" class="form-control" asp-items="ViewBag.ClientID"></select>
                                    <span asp-validation-for="ClientID" class="text-danger"></span>
                                </div>
                            </div>
                            
                        </div>
                    </div>

                    <div class="form-row" style="float:right">
                        <div class="form-group" style="padding-right:5px">
                            <input type="submit" value="Zapisz" class="btn btn-success" />
                        </div>
                        <div class="form-group">
                            <a class="btn btn-outline-success float-right mb-3" role="button" aria-haspopup="true" aria-expanded="false" asp-action="Index">
                                <i class="fe fe-arrow-left" style="vertical-align:text-top"></i>
                                Powrót do listy adresów
                            </a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

